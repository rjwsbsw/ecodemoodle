<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/ecodebookmanager/db" VERSION="20130407" COMMENT="XMLDB file for ecode book plugin"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="local_ecodebookmanager" COMMENT="each record is a book">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="bookid" TYPE="text" NOTNULL="true" SEQUENCE="False"/>
                <FIELD NAME="booktitle" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="ordersource" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="sharedsecret" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="host" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>
